<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="수도권 지하철"
                    android:textColor="#6750A4"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="승강기야 괜찮니?"
                    android:textColor="#6750A4"
                    android:textSize="30sp"/>
                <TextClock
                    android:format12Hour="yyyy년 MM월 dd일 hh시 mm분"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">
                <ImageButton
                    android:id="@+id/mailButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_radius"
                    android:src="@drawable/baseline_mail_outline_24"
                    app:tint="#6750A4" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="문의"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">
                <ImageButton
                    android:id="@+id/currentLocationButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/button_radius"
                    android:src="@drawable/location"
                    app:tint="#6750A4"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="현재위치"
                    android:textSize="12sp"
                    android:textAlignment="center"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:background="@drawable/radius">
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textField"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                app:endIconMode="clear_text"
                android:hint="역 검색">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputSearchText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:maxLines="1"
                    android:inputType="text"
                    android:imeOptions="actionSearch" />

            </com.google.android.material.textfield.TextInputLayout>
            <ImageButton
                android:src="@drawable/search_button"
                android:id="@+id/searchButton"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/button_radius"
                app:tint="#6750A4"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/radius"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stationNameResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="검색 결과"
                android:textSize="40sp"
                android:textColor="#6750A4"
                android:textAlignment="viewStart"
                android:layout_marginTop="20dp"
                android:layout_marginStart="35dp"
                android:layout_marginHorizontal="20dp"
                android:visibility="gone"
                tools:text="신설동역"
                tools:visibility="visible"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:id="@+id/loadingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <ProgressBar
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:indeterminateTint="#6750A4"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="현재 위치 찾는 중"
                        android:textSize="20sp"
                        android:layout_marginTop="16dp"
                        android:textColor="#6750A4"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/initialLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:visibility="visible"
                    tools:visibility="gone">
                    <ImageView
                        android:id="@+id/subwayIcon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/directions_subway_24px"
                        app:tint="#6750A4"
                        android:contentDescription="지하철 아이콘" />
                    <TextView
                        android:id="@+id/initialMessageText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="역 이름을 검색하거나 현재 위치를 찾아보세요."
                        android:textSize="18sp"
                        android:layout_marginTop="16dp"
                        android:textColor="#6750A4"/>
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvElevatorList"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:padding="16dp"
                    android:clipToPadding="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_elevator"
                    tools:visibility="gone"/>
            </FrameLayout>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* 검색결과는 가장 가까운 역으로 매칭됩니다"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자료제공 : 서울교통공사"
            android:textSize="15sp"
            android:textAlignment="textEnd"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>